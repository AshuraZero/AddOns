<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">
	<Script file="CT_RABossModsRangeCheck.lua"/>
	<GameTooltip name="CT_RABossRangeCheckTooltip" inherits="GameTooltipTemplate" parent="UIParent" hidden="true"></GameTooltip>

	<Frame name="CT_RABossRangeCheckFrame" movable="true" toplevel="true" parent="UIParent" hidden="true">
		<Size>
			<AbsDimension x="16" y="16" />
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="CT_RABossRangeCheckStatusTexture" file="Interface\AddOns\CT_RABossMods\Images\RangeStatus"/>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="$parent_DropDown" inherits="UIDropDownMenuTemplate" id="1" hidden="true">
				<Size>
					<AbsDimension x="10" y="10"/>
				</Size>
				<Anchors>
					<Anchor point="TOP">
						<Offset>
							<AbsDimension x="70" y="10"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>
				this:RegisterForDrag("LeftButton");
				this:SetMovable(1);
				CT_RABoss_RangeCheck.onLoad();
			</OnLoad>
			<OnEvent>
				CT_RABoss_RangeCheck.onEvent(event);
			</OnEvent>
			<OnUpdate>
				CT_RABoss_RangeCheck.onUpdate(arg1)
			</OnUpdate>
			<OnDragStart>
				if(not CT_RABoss_Options["RangeCheckLocked"]) then
					this:StartMoving();
				end
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing();
			</OnDragStop>
			<OnMouseDown>
				if ( arg1 == "RightButton" ) then
					ToggleDropDownMenu(1, nil, getglobal(this:GetName() .. "_DropDown"), this:GetName(), 47, 15);
				end
			</OnMouseDown>
		</Scripts>
	</Frame>
</Ui>