<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Frame name="CT_ThaddiusLeftFrame" frameStrata="HIGH" parent="UIParent" movable="true" hidden="true">
		<Size>
			<AbsDimension x="64" y="64"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="-100" y="-20"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="CT_ThaddiusLeftTexture" file="Interface\AddOns\CT_RABossMods\Images\left"/>
			</Layer>
		</Layers>
	</Frame>

	<Frame name="CT_ThaddiusRightFrame" frameStrata="HIGH" parent="UIParent" movable="true" hidden="true"> 
		<Size>
			<AbsDimension x="64" y="64"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="100" y="-20"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="CT_ThaddiusRightTexture" file="Interface\AddOns\CT_RABossMods\Images\right"/>
			</Layer>
		</Layers>
	</Frame>

	<ScrollingMessageFrame name="CT_ThaddiusMsgFrame" frameStrata="HIGH" parent="UIParent" insertMode="TOP">
		<Size>
			<AbsDimension x="800" y="55"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER" relativeTo="CT_ThaddiusFrame" relativePoint="BOTTOM">
				<Offset>
					<AbsDimension x="0" y="-175"/>
				</Offset>
			</Anchor>
		</Anchors>
		<FontString inherits="MasterFont" font="Fonts\FZXHJW.TTF" justifyH="CENTER">
			<FontHeight>
				<AbsValue val="32"/>
			</FontHeight>
		</FontString>
		<Scripts>
			<OnLoad>
				CT_ThaddiusLeftFrame:SetScale(2.0);
				CT_ThaddiusRightFrame:SetScale(2.0);
				CT_ThaddiusLeftTexture:SetVertexColor(0,1,0);
				CT_ThaddiusRightTexture:SetVertexColor(0,1,0);
				CT_ThaddiusLeftFrame:Hide();
				CT_ThaddiusRightFrame:Hide();
			</OnLoad>
		</Scripts>
	</ScrollingMessageFrame>

</Ui>