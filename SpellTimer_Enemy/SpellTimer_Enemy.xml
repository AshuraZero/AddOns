			<AbsDimension x="180" y="24" />
		</Size>		
		<Layers>		
            <Layer level="OVERLAY">			
				<FontString name="$parentText" inherits="GameFontHighlightSmall" justifyH="LEFT">				   
					<Size>
						<AbsDimension x="160" y="10"/>
					</Size>
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="6" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>					
				</FontString>
			</Layer>
		</Layers>
		<Frames>
		    <Button name="$parentIcon">
			    <Size>
					<AbsDimension x="18" y="18"/>
				</Size>
				<Anchors>
					<Anchor point="LEFT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture name="$parentTexture"/>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						this:RegisterForClicks("LeftButtonDown", "LeftButtonUp", "RightButtonUp")
					</OnLoad>
					<OnClick>
				        if (not IsShiftKeyDown()) then
					         SpellTimer_EnemyBar_OnClick()
				        end
			        </OnClick>
					<OnEnter>
						SpellTimer_EnemyBar_OnEnter()  
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
					<OnMouseDown>
 				        if (IsShiftKeyDown()) then
					         this.moving = 1
					         this.enableMouse = 1
					         SpellTimer_EnemyMain:StartMoving()							
			            end
 		            </OnMouseDown>
 		            <OnMouseUp> 				       
 		                SpellTimer_EnemyMain:StopMovingOrSizing()
		                this.moving = nil
 				        this.enableMouse = nil		
 			        </OnMouseUp>
					<OnHide>
						if (this.moving) then
							SpellTimer_EnemyMain:StopMovingOrSizing()
							this.moving = nil
						end
					</OnHide>
				</Scripts>
			</Button>		
			<StatusBar name="$parentBar">
				<Size>
					<AbsDimension x="174" y="14"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER" relativeto="$parent">
						<Offset>
							<AbsDimension x="18" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>	
				    <Layer level="BACKGROUND">
						<Texture setAllPoints="true">
							<Color r="0" g="0" b="0" a="0.2"/>
						</Texture>		
					</Layer>
					<Layer level="OVERLAY">
						<Texture name="$parentSpark" file="Interface\CastingBar\UI-CastingBar-Spark" alphaMode="ADD">
							<Size>
								<AbsDimension x="32" y="32"/>
							</Size>
							<Anchors>
								<Anchor point="CENTER">
									<Offset>
										<AbsDimension x="0" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>
						<Texture name="$parentFlash" file="Interface\CastingBar\UI-CastingBar-Flash" alphaMode="ADD">
							<Size>
								<AbsDimension x="218" y="32"/>
							</Size>
							<Anchors>
								<Anchor point="TOP">
									<Offset>
										<AbsDimension x="0" y="9"/>
									</Offset>
								</Anchor>
							</Anchors>
						</Texture>						
					</Layer>
				</Layers>
				<Frames>
				    <Button name="$parentBorder">
						<Size>
							<AbsDimension x="180" y="28"/>
						</Size>
						<Anchors>
							<Anchor point="LEFT">
								<Offset>
									<AbsDimension x="-3" y="0"/>
								</Offset>
							</Anchor>
						</Anchors>
						<HitRectInsets>
							<AbsInset left="0" right="0" top="7" bottom="7"/>
						</HitRectInsets>
                        <Scripts>
						     <OnEnter>
					             SpellTimer_EnemyBar_OnEnter()  
					         </OnEnter>
					         <OnLeave>
						         GameTooltip:Hide()
					         </OnLeave>						         
							 <OnClick>
				                 if (not IsShiftKeyDown()) then
					                   SpellTimer_Enemy_OnClick()
				                 end
			                 </OnClick>
				        </Scripts>
						<NormalTexture name="$parentNormal" file="Interface\PaperDollInfoFrame\UI-Character-Skills-BarBorder"/>						
					</Button>
				</Frames>				
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="1.0" g="1.0" b="0.0"/>
				<Scripts>
					 <OnLoad>
					     this:SetFrameLevel(this:GetFrameLevel() - 2)
					 </OnLoad>
			    </Scripts>
			</StatusBar>
		</Frames>
		<Scripts>
		    <OnUpdate>
				 SpellTimer_EnemyOnUpdate(arg1)
			</OnUpdate>				
		</Scripts>
